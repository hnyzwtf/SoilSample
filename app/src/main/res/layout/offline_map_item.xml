<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cityname"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="6.0dip"
            android:text="cityname"
            android:textSize="@dimen/text_size_16"/>
        <TextView
            android:id="@+id/tv_download_state"
            android:layout_toRightOf="@id/tv_cityname"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="6.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_cityname"
            android:textSize="@dimen/text_size_16"/>

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_download"/>
        <TextView
            android:id="@+id/tv_data_size"
            android:layout_toLeftOf="@id/btn_download"
            android:text="14M"
            android:layout_alignBaseline="@id/tv_cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16"/>
    </RelativeLayout>

</LinearLayout>